        <h2 id="人生定格">「人生定格」</h2>

  
<link rel="stylesheet" href='//cdnjs.cloudflare.com/ajax/libs/nanogallery2/3.0.5/css/nanogallery2.min.css'/>
<script src="//cdnjs.cloudflare.com/ajax/libs/nanogallery2/3.0.5/jquery.nanogallery2.min.js"></script>






<div class="photography-tags">
  <ul>
    
    <li tag="2021"><a>2021</a></li>
    
    <li tag="2020"><a>2020</a></li>
    
    <li tag="2018"><a>2018</a></li>
    
    <li tag="2016"><a>2016</a></li>
    
  </ul>
</div>


<div class="nanogallery2" id="nanogallery2"></div>

<script>
$(document).ready(function() {
  function createGallery(tag) {
    var dataURL = "/data/photography";

    if (tag != undefined && tag != null) {
      dataURL = dataURL + '-' + tag + '.json';
    } else {
      dataURL = dataURL + '.json';
    }

    $.getJSON(dataURL, function(data) {
      $("#nanogallery2").nanogallery2("destroy");
      $("#nanogallery2").nanogallery2(data);
    });
  }

  function activateTag(tag) {
    $(".photography-tags ul li").removeClass("active");
    $(".photography-tags ul li[tag=" + tag +"]").addClass("active");
  }

  var tag = $(".photography-tags ul li").first().attr("tag");
  activateTag(tag);
  createGallery(tag);

  $(".photography-tags ul li a").click(function() {
    var tag = $(this).html();
    var activeTag = $(".photography-tags ul li[class~='active']").first().attr("tag");

    if (tag != activeTag) {
      activateTag(tag);
      createGallery(tag);
    }
  });
});
</script>

